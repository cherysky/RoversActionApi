<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schiztech.rovers.example.action" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".CreateActionActivity"
            android:label="@string/action_name"
            android:icon="@drawable/ic_action_roveraction"
            android:theme="@android:style/Theme.NoDisplay"
            >
            <intent-filter>
                <action android:name="com.schiztech.rovers.action" />
            </intent-filter>

            <meta-data
                android:name="description"
                android:value="@string/action_desc" />

        </activity>
        <activity
            android:exported="true"
            android:name=".LaunchedActivity"
            android:label="@string/title_activity_launched" >
        </activity>
    </application>

</manifest>
